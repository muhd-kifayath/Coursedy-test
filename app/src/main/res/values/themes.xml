<resources>
    <!-- Base application theme. -->
    <style name="Theme.Coursedy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primarybg</item>
        <item name="colorPrimaryVariant">@color/primarybg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/agencyfb</item>
        <item name="fontFamily">@font/agencyfb</item>
        <item name="android:textColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
    <style name="MenuTextStyle" parent="ThemeOverlay.Material3.NavigationView">
        <item name="android:textSize">18sp</item>
    </style>
</resources>